<?php

/**
 * Implements hook_enable().
 */
function avsbase_enable() {
  $t = get_t();

  // Create a custom menu, if Menu module is enabled.
  // @see avsbase_modules_installed()
  if (module_exists('menu')) {
    $menu = array(
      'menu_name' => 'avs',
      'title' => $t('AVS Menu'),
      'description' => $t('AVS AIS links'),
    );
    menu_save($menu);
  }
}
