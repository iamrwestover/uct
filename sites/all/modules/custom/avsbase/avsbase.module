/**
 * Implements hook_modules_installed().
 *
 * @see avsbase_install()
 */
function avsbase_modules_installed($modules) {
  if (in_array('menu', $modules)) {
    $menu = array(
      'menu_name' => 'avs',
      'title' => t('AVS Menu'),
      'description' => t('AVS AIS links'),
    );
    menu_save($menu);
  }
}


